#:import random random

<Screen1>:
    name: 'Screen1'
    Widget:
        canvas.before:
            Color:
                rgba: 0.2,0.3,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            pos: root.width * 0, root.height * 0.9
            size: root.width * 1, root.height * 0.1
            id: my_label
            text:"From 1 (terrible) to 5 (excellent) how intuitive is the design of the following website:"
            font_size: 16
            color: 1,1,1,1
        Image:
            id: screenshot
            pos: root.width * 0.1, root.height * 0.2
            size: root.width * 0.8, root.height * 0.7
            source: 'images/ebay.png'
            opacity: 1
            allow_stretch: True
            keep_ratio: False
        GridLayout:
            cols:5
            spacing: '8dp'
            size: root.width * 0.5,root.height * 0.05
            pos: root.width * 0.25, root.height * 0.1

            Label:
                text: "1"
            Label:
                text: "2"
            Label:
                text: "3"
            Label:
                text: "4"
            Label:
                text: "5"
            CheckBox:
                height: '48dp'
                group: 'g1'
            CheckBox:
                height: '48dp'
                group: 'g1'
            CheckBox:
                height: '48dp'
                group: 'g1'
            CheckBox:
                height: '48dp'
                group: 'g1'
            CheckBox:
                height: '48dp'
                group: 'g1'

<Screen2>:
    name: 'Screen2'
    Widget:
        canvas.before:
            Color:
                rgba: 1,0.3,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            pos: root.width * 0, root.height * 0.9
            size: root.width * 1, root.height * 0.1
            id: my_label
            text:"Screen2"
            font_size: 16
            color: 1,1,1,1

        TextInput:
            id: my_textinput
            font_size: 20
            text:"hello world"
            size: root.width * 0.5, root.height * 0.1
            pos: root.width * 0.08, root.height * 0.7

        LoggedButton:
            id: robot_say
            name: 'goto_game2_button'
            background_color: 0.5,0.5,0.5,1
            background_normal: ''
            text: 'robot say'
            font_size: 16
            size: root.width * 0.15, root.height * 0.1
            pos: root.width * 0.6, root.height * 0.7
            on_press: app.robot_say(my_textinput.text)
