#:import random random

<ScatterTextWidget>:
    orientation: 'vertical'

    Widget:
        canvas.before:
            Color:
                rgba: 0.2,0.3,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            pos: root.width * 0, root.height * 0.9
            size: root.width * 1, root.height * 0.1
            id: my_label
            text:"From 1 (terrible) to 5 (excellent) how intuitive is the design of the following website:"
            font_size: 16
            color: 1,1,1,1
        Image:
            id: screenshot
            pos: root.width * 0.1, root.height * 0.2
            size: root.width * 0.8, root.height * 0.7
            source: 'images/ebay.png'
            opacity: 1
            allow_stretch: True
            keep_ratio: False
        GridLayout:
            cols:5
            spacing: '8dp'
            size: root.width * 0.5,root.height * 0.05
            pos: root.width * 0.25, root.height * 0.1

            Label:
                text: "1"
            Label:
                text: "2"
            Label:
                text: "3"
            Label:
                text: "4"
            Label:
                text: "5"
            CheckBox:
                height: '48dp'
                group: 'g1'
            CheckBox:
                height: '48dp'
                group: 'g1'
            CheckBox:
                height: '48dp'
                group: 'g1'
            CheckBox:
                height: '48dp'
                group: 'g1'
            CheckBox:
                height: '48dp'
                group: 'g1'